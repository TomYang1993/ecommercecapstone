<h1>Create a new product</h1>

<%= form_tag("/products",method: "post")   do %>
<div>
  <%= label_tag(:name)%>
  <%= text_field_tag(:name,"product's name") %>
</div>
<div>
  <%= label_tag(:price)%>
  <%= text_field_tag(:price,"product's price") %>
</div>
<div>
  <%= label_tag(:description)%>
  <%= text_field_tag(:description,"product's description") %>
</div>
 <%= submit_tag("create!") %>
<% end %>
